@using Microsoft.AspNetCore.Identity

@using SupPlayer.ViewModel
@model List<PlaylistViewModel>

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@{
    //pour recuperer le nom et l'id de la playlist du song sans avoir a faire un foreach sur tout le fichier
    var pName = "";
    var pID = 0;
}

<div class="contentsite" style="margin-top:20px;">
    @if (SignInManager.IsSignedIn(User))
    {
        //on recupere nom et l'id de la playlist du song
        @foreach (var data in Model)
        {
            pName = data.PlaylistName;
            pID = data.PlaylistID;
        }
        //securisation
        if(!string.IsNullOrEmpty(pName))
        {
            <h3>Playlist : @pName</h3>

            <p>Use this section to add songs to this playlist</p>

            <form method="post" enctype="multipart/form-data" asp-action="Create_Song">
                <input type="hidden" name="PlaylistID" value="@pID" />

                <p>Upload a <b>mp3</b> file:</p>
                <div class="form-group">
                    <!--<input type="file" name="file" class="form-control" accept=".mp3" />-->
                    <input type="file" name="file" id="file" class="form-control inputfile" accept=".mp3" data-multiple-caption="{count} files selected" multiple/>
                    <label for="file" id="figue">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="17" viewBox="0 0 20 17"><path d="M10 0l-5.2 4.9h3.3v5.1h3.8v-5.1h3.3l-5.2-4.9zm9.3 11.5l-3.2-2.1h-2l3.4 2.6h-3.5c-.1 0-.2.1-.2.1l-.8 2.3h-6l-.8-2.2c-.1-.1-.1-.2-.2-.2h-3.6l3.4-2.6h-2l-3.2 2.1c-.4.3-.7 1-.6 1.5l.6 3.1c.1.5.7.9 1.2.9h16.3c.6 0 1.1-.4 1.3-.9l.6-3.1c.1-.5-.2-1.2-.7-1.5z"></path></svg>
                        <span>Choose a file...</span>
                    </label>
                    <button type="submit" style="display:none" id="addSong"><span class="glyphicon glyphicon-plus aria-hidden"></span></button>
                    <p id="errorMusic" style="display:none">Special characters are not allowed in the song name</p>
                </div>
            </form>

            <h3>List of songs in this playlist :</h3>
            
            <ul class="list-group">
                @foreach (var data in Model)
                {
                    //on affiche pas les infos du default song
                    @if (data.SongName != "Default song")
                    {
                        <li class="list-group-item">
                            @data.SongName
                            <i class="pull-right">@Html.ActionLink("play", "PlaySong", "Home", new { id = data.SongID })
                            
                            @Html.ActionLink("delete", "DeleteSong", "Home", new { id = data.SongID })</i>
                        </li>
                    }
                }
            </ul>
        }
        else
        {
            <script>location.reload();</script>
        }
    }
    else
    {
        <h2> You must be logged in to access this section.</h2>
    }
</div>
